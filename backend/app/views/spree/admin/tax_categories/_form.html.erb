<div data-hook="admin_tax_category_form_fields" class="row">
  <div class="col-3">
    <%= f.field_container :name do %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'fullwidth' %>
    <% end %>
  </div>

  <div class="col-2">
    <%= f.field_container :tax_code do %>
      <%= f.label :tax_code %>
      <%= f.text_field :tax_code, class: 'fullwidth' %>
    <% end %>
  </div>

  <div class="col-1">
    <%= f.field_container :is_default, class: ['checkbox'] do %>
      <label>
        <%= f.check_box :is_default %>
        <%= Spree::TaxCategory.human_attribute_name(:is_default) %>
        <%= f.field_hint :is_default %>
      </label>
    <% end %>
  </div>

  <div class="col-4">
    <%= f.field_container :description do %>
      <%= f.label :description %><br>
      <%= f.text_area :description, class: 'fullwidth' %>
    <% end %>
  </div>

  <% if Spree::Backend::Config.show_reverse_charge_fields %>
    <div class="col-4">
      <%= f.field_container :tax_reverse_charge_mode do %>
        <%= f.label :tax_reverse_charge_mode %>
        <%= f.select :tax_reverse_charge_mode,
            Spree::TaxCategory.tax_reverse_charge_modes.keys.map { |key| [I18n.t("spree.tax_reverse_charge_modes.#{key}"), key] },
            { include_blank: false },
            { class: 'custom-select fullwidth' } %>
      <% end %>
    </div>
  <% end %>
</div>
